---
interface Props {
	href: string;
}

const { href } = Astro.props;
---
<a class="flex flex-col justify-center items-center bg-[#1178ff9c] dark:bg-[#49a7ff56] rounded-3xl relative overflow-hidden col-span-1 aspect-square shadow-sm cursor-pointer hover:scale-[103%] transition duration-300 ease-in-out" target="_blank"
href={href}>

</a>